{
  "app": {
    "host": "0.0.0.0",
    "port": 3000
  },
  "cors": {
      "allowedOrigins": []
  },
  "docs": {
    "dest": "docs/",
    "includeFilters": [".*\\.js$"],
    "silent": true
  },
  "lint": {
    "ignorePattern": ["node_modules", "build", "docs"],
    "rules": {
        "extends": "airbnb-base",
        "parser": "babel-eslint"
    }
  },
  "logging": {
    "logs": "./logs",
    "level": "info",
    "filename": "all-logs.log",
    "maxsize": 5242880
  }
}
